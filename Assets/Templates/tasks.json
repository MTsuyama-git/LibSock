{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build(Debug)",
            "command": "cmake",
            "args": [
                "--build",
                "Outputs/Debug"
            ],
            "options": {
                "cwd": "@dd@{workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build project with debug configuration."
        },
        {
            "type": "shell",
            "label": "Build(Release)",
            "command": "cmake",
            "args": [
                "--build",
                "Outputs/Release"
            ],
            "options": {
                "cwd": "@dd@{workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Build project with debug configuration."
        },
        {
            "type": "shell",
            "label": "GenerateLaunch.json",
            "command": "pwsh",
            "args": [
                "./Scripts/GenerateLaunchJson.ps1",
                "Outputs/Debug",
                ".vscode/launch.json"
            ],
            "options": {
                "cwd": "@dd@{workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "dependsOn": [
                "Build(Debug)"
            ],
            "detail": "Build project with debug configuration."
        }
    ]
}